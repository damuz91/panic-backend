<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Administrador Boton de p√°nico</h1>
      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Fecha</th>
            <th>SO</th>
            <th>Tipo</th>
            <th>Mensajes</th>
          </tr>
        </thead>
        <tbody> 
          <% @requests.each do |log| %>
            <tr>
              <td><%= link_to log.user.store_user_id, user_path(log.user_id), class: 'btn btn-success' %></td>
              <td><%= log.user.name %></td>
              <td><%= log.created_at %></td>
              <td><%= log.os %></td>
              <td><%= log.request_type %></td>
              <td><%= link_to log.messages.count, request_details_path(log.id), class: 'btn btn-primary btn-xs' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

